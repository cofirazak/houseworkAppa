<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">
    <TextView
        android:layout_width="220dp"
        android:layout_height="56dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/workPageRecyclerView"
        android:layout_marginBottom="20dp"
        android:text="@string/title_list"
        android:textSize="24sp"
        android:textColor="#333333"
        android:textAppearance="@style/doneButtonText"
        android:gravity="center"
        android:textStyle="bold|italic"
        />

    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/workPageRecyclerView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="80dp"
            app:layout_constraintBottom_toTopOf="@id/workPageFab"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:listitem="@layout/work_recyclerview_item" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/workPageFab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:contentDescription="@string/add_work"
            android:src="@drawable/ic_baseline_add_24"
            android:backgroundTint="#299B9C"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>